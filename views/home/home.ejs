<div class="ui container text margin-top-40 margin-bottom-40">
	<div class="float-right">
		<div class="ui small left icon input">
			<i class="search icon"></i>
		  	<input class="font-brand" type="text" placeholder="Tìm..." />
		</div>
	</div>
	<h1 class="ui header pink">&nbsp;</h1>
	<div class="ui tall stacked segments home-main">
		<!--count input-->
		<input type="hidden" class="home-count" value="<%=locals.data.count%>" />
		<!--end-->
		<%if(locals &&
			locals.data &&
			locals.data.rows){
			locals.data.rows.forEach(function(stories, index){%>
			<div class="ui segment">
				<a class="ui pink font-brand ribbon large label">Ngôn tình</a>
				<span class="float-right media-time font-brand home-date">
				</span>
				<input type="hidden" class="home-date-hidden" value="<%=stories.CreatedDate%>" />
				<div class="ui very relaxed items">
					<div class="item">
					<%if(stories &&
						stories.FileUploads &&
						stories.FileUploads[0]){%>
						<div class="ui small image">
							<img class="height-image-home" src="/user/download-background/<%=stories.FileUploads[0].UID%>" />
						</div>
						<%}%>
						<div class="content">
							<h1 class="ui pink header">
							  	<div class="content">
							    	<span class="font-header capitalize"><%=stories.Title%>
							    	</span>
							  	</div>
							</h1>
							<div class="description">
								<p>
								<%=stories.ShortContent%>
								</p>
								<a href="/truyen/<%=stories.SpeakingUrl%>" 
								class="ui mini pink button font-brand">Chi tiết</a>
							</div>
						</div>
					</div>
				</div>
			</div> 
			<%})
		}%>
		</div>
		<div class="ui centered inline loader home-loader"></div>	
	</div>
</div>
