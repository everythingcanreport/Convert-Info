<div class="ui container text margin-top-40">
	<div class="ui piled segments">
		<div class="ui segment">
			<h1 class="ui header pink">
				<span class="font-header">
					<!--title stories-->
					<%=locals.data.Title%>
					<!--end-->
				</span>
				<a href="/" class="go-home floated-right margin-top-5 size-18 color-pink"><i class="icon home"></i></a>
			</h1>
			<div class="ui images align-center">
			<%if(locals &&
				locals.data &&
				locals.data.FileUploads &&
				locals.data.FileUploads[0]) {%>
			<img class="review-background ui big centered image max-height-image-view" src="/user/download-background/<%=locals.data.FileUploads[0].UID%>" width="100%" height="15%" />
			<%}%>
			</div>
			<h4 class="ui horizontal divider pink header review-date font-ribbon">
			  	<!--date write stoties-->
			  	<!--end-->
			</h4>
			<%if(locals &&
			  		locals.data){%>
			  		<input type="hidden" class="view-date-create" value="<%=locals.data.CreatedDate%>" />
			  		<%}%>
			<div class="description review-description font-content">
				<!--description stories-->
				<%-locals.data.Content%>
				<!--end-->
			</div>
		</div>
	</div>
	<div class="ui two segments">
		<div class="ui segment">
		    <div class="ui threaded comments margin-bottom-40">
		  		<h3 class="ui dividing header pink font-ribbon">Bình luận</h3>
		  		<div class="fb-like" data-href="http://aileephan.com/view/<%=locals.data.SpeakingUrl%>" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
				<div class="fb-comments"
			     data-href="http://aileephan.com/view/<%=locals.data.SpeakingUrl%>"
			     data-numposts="5"
			     data-width="100%"
			     data-colorscheme="light">
			     </div>
			</div>
		</div>
	</div>
	<br/>
	<br/>
	<br/>
</div>